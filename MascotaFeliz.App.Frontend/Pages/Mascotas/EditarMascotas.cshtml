@page
@model MascotaFeliz.App.Frontend.Pages.EditarMascotasModel
@{
    int mascotaId = Model.mascota.Id;
}


<h2 class="titulo1">Agregar o Editar Mascotas</h2>
<div class="Div1">
    <div>
        <form method = "post">
            <input type ="hidden" asp-for ="mascota.Id"/>
            <div class="Div4">
                <table class= "tabla2" >
                    <tr>
                        <th>Nombre:</th>
                        <td><input asp-for="mascota.Nombre"/></td>
                    </tr>
                    <tr>
                        <th>Color:</th>
                        <td><input asp-for="mascota.Color"/></td>
                    </tr>
                    <tr>
                        <th>Especie:</th>
                        <td><input asp-for="mascota.Especie"/></td>
                    </tr>
                    <tr>
                        <th>Raza:</th>
                        <td><input asp-for="mascota.Raza"/></td>
                    </tr>
                    <tr>
                        <th><label for="dueno" class="form-label mb-0">Dueno:</label></th>
                        <td><select class="form-control" id="dueno" asp-for="mascota.Dueno.Id"
                        name= "idDueno" aria-label="Default select example">
                        <option value="0">Seleccione Dueño</option>
                        @foreach (var duenos in Model.duenos)
                        {
                            <option value="@duenos.Id">@duenos.Nombres @duenos.Apellidos </option>
                        }
                        </select>
                        </td>
                    </tr>
                    <tr>
                        <th>Veterinario:</th>
                        <td><input asp-for="mascota.Veterinario"/></td>
                    </tr>
                </table>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
        <div>
            <button asp-page="./ListaMascotas" class="btn-default">Volver</button>
        </div>
    </div>
    <div class = "Div5mascota">
        <a >
        </a>
    </div>

</div>












