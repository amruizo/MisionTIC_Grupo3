@page
@model MascotaFeliz.App.Frontend.Pages.ListaVeterinariosModel
@{
}

<h1 class = "titulo1">Lista General de Veterinarios</h1>

<table class="tabla1">
          <thead class="thead1">
            <tr>
              <th class="borde1">Nombre</th>
              <th class="borde1">Apellido</th>
              <th class="borde1">Dirección</th>
              <th class="borde1">Teléfono</th>
              <th class="borde1">Tarjeta Prodesional</th>
              <th class="borde1" colspan="3">Acciones</th>
            </tr>
          </thead>
          @foreach (var veterinario in Model.listaVeterinarios)
          {
            <tr>
              <td class="borde1">@veterinario.Nombres</td>
              <td class="borde1">@veterinario.Apellidos</td>
              <td class="borde1">@veterinario.Direccion</td>
              <td class="borde1">@veterinario.Telefono</td>
              <td class="borde1">@veterinario.TarjetaProfesional</td>

              <td class="borde1">
                <a class = "texto4" asp-page="./DetallesVeterinarios" asp-route-veterinarioId="@veterinario.Id" title="Detalles">
                  <i class = "fas fa-info-circle fa-lg" aria-hidden="true"></i>
                </a>
              </td>
              <td class="borde1">
                <a class="texto4" asp-page="./EditarVeterinarios" asp-route-veterinarioId="@veterinario.Id" title="Editar">
                  <i class = "fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>
              </td>
              <td class="borde1">
                <a class="texto4" asp-page="./EliminarVeterinario" asp-route-veterinarioId="@veterinario.Id" title="Eliminar">
                  <i class = "fas fa-trash" aria-hidden="true"></i>
                
                </a>

            </tr>
          }
          </table>
<a class="btn-add" asp-page="./EditarVeterinarios" class="btn-default">Adicionar Veterinario</a>






