<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mascota Feliz</title>
    <link href="~/wwwroot/css/styleindex.css" rel="stylesheet" type="text/css"/>
    <link href="~/wwwroot/css/styletabla.css" rel="stylesheet" type="text/css"/>
</head>
<body class="Fondo">
    <header class="header">
        <nav class="nav">
            <div class="box-padre">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Mascota Feliz</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="testbox">
                    <ul class="nav-menu">
                        <li class="nav-menu-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-menu-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Duenos/ListaDuenos">Lista Dueños</a>
                        </li>
                        <li class="nav-menu-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Mascotas/ListaMascotas">Lista Mascotas</a>
                        </li>
                        <li class="nav-menu-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Veterinarios/ListaVeterinarios">Lista Veterinarios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MascotaFeliz.App.Frontend - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/wwwroot/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/wwwroot/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/wwwroot/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
